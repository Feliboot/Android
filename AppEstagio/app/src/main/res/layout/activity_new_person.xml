<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.NewPersonActivity"
        android:background="#B5D1E0"
        android:orientation="vertical"
        android:padding="10dp"
>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/textView4"
            tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <EditText android:layout_width="373dp"
              android:layout_height="wrap_content"
              android:id="@+id/nome_campo_id"
              android:inputType="textPersonName"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Email"
              android:textStyle="bold"
              android:textSize="20sp"

              android:id="@+id/textView5"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <EditText android:layout_width="373dp"
              android:layout_height="wrap_content"
              android:id="@+id/email_campo_id"
              android:inputType="textEmailAddress"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Empresa"
              android:textStyle="bold"
              android:textSize="20sp"

              android:id="@+id/textView6"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="18dp"/>
    <EditText android:layout_width="373dp"
              android:layout_height="wrap_content"
              android:id="@+id/empresa_campo_id"
              android:inputType="text"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Cidade"
              android:textStyle="bold"
              android:textSize="20sp"

              android:id="@+id/textView7"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <EditText android:layout_width="373dp"
              android:layout_height="wrap_content"
              android:id="@+id/cidade_campo_id"
              android:inputType="text"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Estado"
              android:textStyle="bold"
              android:textSize="20sp"

              android:id="@+id/textView8"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <EditText android:layout_width="373dp"
              android:layout_height="wrap_content"
              android:id="@+id/estado_campo_id"
              android:inputType="text"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="PaÃ­s"
              android:textStyle="bold"
              android:textSize="20sp"

              android:id="@+id/textView9"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>
    <EditText android:layout_width="373dp"
              android:layout_height="wrap_content"
              android:id="@+id/pais_campo_id"
              android:inputType="text"
              tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/btn_add_ok"
            tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"
    />
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/btn_add_cancel"
            tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="19dp"
    />

</LinearLayout>